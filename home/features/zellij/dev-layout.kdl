layout {
    tab hide_floating_panes=true {
      pane split_direction="vertical" {
        pane command="env" size="15%" {
          args "YAZI_CONFIG_HOME=~/.config/yazi-tree" "yazi" 
        }
        pane size="85%" {
          pane command="nvim" size="80%" focus=true
          pane size="20%"
        }
      }    
      pane size=1 borderless=true {
          plugin location="compact-bar"
      }
      floating_panes {
         pane command="lazygit" 
      }
    }
}
